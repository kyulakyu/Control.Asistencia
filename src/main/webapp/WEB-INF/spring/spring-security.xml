	<!-- Configuraci칩n de autenticaci칩n -->
	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="bcrypt" />
			<jdbc-user-service data-source-ref="ds"
				users-by-username-query="select correo_usuario as username, password_usuario as password, 1 as enable from login where correo_usuario = ?"
				authorities-by-username-query="select correo_usuario as username, tipo_usuario as authority from login where correo_usuario = ?" />
		</authentication-provider>

	</authentication-manager>

</beans:beans>