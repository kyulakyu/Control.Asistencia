		<intercept-url pattern="/Inicio" access="permitAll" /> <!-- Permitir acceso a todos -->
		<form-login login-page="/"
			authentication-failure-url="/error" username-parameter="correo_usuario"
			password-parameter="password_usuario" />
		<csrf disabled="true" />
		<logout logout-success-url="/Inicio" />
	</http>
<!--  Contrase침as base
